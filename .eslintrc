{
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "extends": ["prettier"],
  "env": {
    "mocha": true
  },
  "rules": {
    // Style
    "max-lines": [2, { "max": 500, "skipBlankLines": true, "skipComments": true }],

    // Best Practices
    // References & Variables
    "prefer-const": 2,
    "no-var": 2,
    "no-unused-vars": 2,
    "no-multi-assign": 2,
    "no-plusplus": 2,
    "no-undef": 2,
    "one-var": [2, "never"],

    // Objects
    "no-new-object": 2,
    "object-shorthand": [2, "always"],
    "no-prototype-builtins": 2,
    "prefer-object-spread": 2,

    // Arrays
    "no-array-constructor": 2,
    "array-callback-return": 2,

    // Strings
    "prefer-template": 2,
    "template-curly-spacing": 2,
    "no-eval": 2,

    // Functions
    "no-loop-func": 2,
    "prefer-rest-params": 2,
    "default-param-last": 2,
    "no-new-func": 2,

    // Arrow Functions
    "arrow-spacing": 2,
    "no-confusing-arrow": 2,

    // Class & Constructors
    "no-useless-constructor": 2,
    "class-methods-use-this": 2,

    // Modules (hier fehlt import Plugin)
    "no-duplicate-imports": 2,

    // Properties
    "dot-notation": 2,

    // Comparison Operators & Equality
    "no-mixed-operators": 2,
    "eqeqeq": 2,

    // Blocks
    "brace-style": 2,
    "no-else-return": 2,

    // Comments
    "spaced-comment": 2,

    // Commas & Semicolons
    "comma-style": 2,
    "semi": 2,

    // Type Casting & Coercion
    "radix": 0,
    "no-new-wrappers": 2,

    // Naming Conventions
    "id-length": 0,
    "new-cap": 2,
    "camelcase": [0, { "properties": "always" }],

    "prettier/prettier": "error"
  }
}
